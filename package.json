{
  "name": "who-owes-who",
  "version": "1.0.0",
  "description": "A calculator to work out payments in groups",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "prepare": "npm run build",
    "mutate": "stryker run -c stryker.config.json --concurrency 8",
    "prepublishOnly": "npm test",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "lint": "eslint . --ext .ts",
    "prettier": "prettier --write ./src/**/*.ts"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/mockingFunctions/mocks.ts",
      "<rootDir>/old"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec|steps))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "restoreMocks": true,
    "clearMocks": true,
    "resetMocks": true
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HenryPenton/who-owes-who.git"
  },
  "keywords": [
    "who",
    "calculator",
    "owes"
  ],
  "author": "Henry Penton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HenryPenton/who-owes-who/issues"
  },
  "homepage": "https://github.com/HenryPenton/who-owes-who#readme",
  "devDependencies": {
    "@stryker-mutator/core": "8.x",
    "@stryker-mutator/jest-runner": "8.x",
    "@stryker-mutator/typescript-checker": "8.x",
    "@swc/core": "1.x",
    "@swc/jest": "0.2.x",
    "@types/jest": "29.x",
    "@types/uuid": "9.x",
    "@typescript-eslint/eslint-plugin": "7.x",
    "@typescript-eslint/parser": "7.x",
    "eslint": "8.x",
    "jest": "29.x",
    "prettier": "3.x",
    "typescript": "5.x"
  },
  "dependencies": {
    "uuid": "9.x"
  }
}
