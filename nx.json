{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "lint:check": {
      "dependsOn": ["^lint:check"],
      "cache": true
    },
    "prettier:check": {
      "dependsOn": ["^prettier:check"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^test", "build", "test:compile"],
      "cache": true
    },
    "test:compile": {
      "dependsOn": ["^test:compile"],
      "cache": true
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage", "test"],
      "outputs": ["{projectRoot}/coverage"],
      "cache": true
    },
    "mutate": {
      "dependsOn": ["test"],
      "outputs": ["{projectRoot}/reports/mutation/mutation.html"],
      "cache": true
    },
    "dependencies:check": {
      "dependsOn": [],
      "outputs": ["{projectRoot}/outdated.json"],
      "cache": false
    },

    "tarball": {
      "dependsOn": ["build"],
      "cache": false
    },
    "lint": {
      "cache": true
    },
    "release-patch": {
      "dependsOn": ["test", "build", "test:coverage"],
      "cache": false
    },
    "release-minor": {
      "dependsOn": ["test", "build", "test:coverage"],
      "cache": false
    },
    "release-major": {
      "dependsOn": ["test", "build", "test:coverage"],
      "cache": false
    }
  },
  "defaultBase": "main",
  "parallel": 10
}
