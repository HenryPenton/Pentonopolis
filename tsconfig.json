{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",

  "compilerOptions": {
    "lib": ["es2020", "DOM"],
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true
  }
}
