{
  "name": "npm-status-messenger",
  "version": "0.0.0",
  "description": "An NPM status messenger",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:check": "eslint --no-fix . --ext .ts",
    "mutate": "stryker run -c stryker.config.json --concurrency 8",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "prettier": "prettier --write ./src/**/*.ts",
    "prettier:check": "prettier --check ./src/**/*.ts",
    "release-major": "pnpm version major",
    "release-minor": "pnpm version minor",
    "release-patch": "pnpm version patch",
    "test": "jest",
    "test:compile": "tsc --project tsconfig-test.json",
    "version": "git add -A && git commit -m$npm_package_name@$npm_package_version && git tag $npm_package_name@$npm_package_version"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/mockingFunctions/mocks.ts",
      "<rootDir>/old"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec|steps))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "restoreMocks": true,
    "clearMocks": true,
    "resetMocks": true
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HenryPenton/who-owes-who.git"
  },
  "keywords": [
    "who",
    "calculator",
    "owes"
  ],
  "author": "Henry Penton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HenryPenton/who-owes-who/issues"
  },
  "homepage": "https://github.com/HenryPenton/who-owes-who#readme",
  "devDependencies": {
    "@stryker-mutator/core": "^8.2.6",
    "@stryker-mutator/jest-runner": "^8.2.6",
    "@stryker-mutator/typescript-checker": "8.2.6",
    "@swc/core": "^1.4.8",
    "@swc/jest": "^0.2.36",
    "@types/jest": "29.5.12",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "7.3.1",
    "@typescript-eslint/parser": "7.3.1",
    "eslint": "8.57.0",
    "jest": "29.7.0",
    "prettier": "3.2.5",
    "typescript": "5.4.3"
  },
  "dependencies": {}
}
