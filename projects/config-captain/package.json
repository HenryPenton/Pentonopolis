{
  "name": "config-captain",
  "version": "1.0.7",
  "description": "A dependency injectable configuration object",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "mutate": "stryker run -c stryker.config.json --concurrency 8",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "prettier": "prettier --write ./src/**/*.ts",
    "release-major": "pnpm version major",
    "release-minor": "pnpm version minor",
    "release-patch": "pnpm version patch",
    "test": "jest",
    "version": "git add -A && git commit -m$npm_package_name@$npm_package_version && git tag $npm_package_name@$npm_package_version"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/mockingFunctions/mocks.ts",
      "<rootDir>/old"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec|steps))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "restoreMocks": true,
    "clearMocks": true,
    "resetMocks": true
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HenryPenton/pentonopolis.git"
  },
  "keywords": [
    "config",
    "captain",
    "dependency",
    "injection"
  ],
  "author": "Henry Penton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HenryPenton/pentonopolis/issues"
  },
  "homepage": "https://github.com/HenryPenton/pentonopolis#readme",
  "devDependencies": {
    "@stryker-mutator/core": "8.x",
    "@stryker-mutator/jest-runner": "^8.x",
    "@stryker-mutator/typescript-checker": "8.x",
    "@swc/core": "1.x",
    "@swc/jest": "0.2.x",
    "@types/node": "20.x",
    "typescript": "5.x"
  }
}
