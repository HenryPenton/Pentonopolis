{
  "name": "moviebot-telegram",
  "version": "6.7.12",
  "description": "A moviebot for telegram",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dependencies:check": "pnpm outdated --json > outdated.json || true",
    "lint:check": "eslint --no-fix . --ext .ts",
    "lint": "eslint . --ext .ts",
    "mutate": "stryker run -c stryker.config.json --concurrency 8",
    "postversion": "git push && git push origin $npm_package_name@$npm_package_version",
    "prepare": "pnpm run build",
    "prepublishOnly": "pnpm test",
    "prettier:check": "prettier --check ./src/**/*.ts",
    "prettier": "prettier --write ./src/**/*.ts",
    "release-major": "pnpm version major",
    "release-minor": "pnpm version minor",
    "release-patch": "pnpm version patch",
    "test:compile": "tsc --project tsconfig-test.json",
    "test:coverage": "jest --coverage",
    "test": "jest",
    "version": "git add -A && git commit -m$npm_package_name@$npm_package_version && git tag $npm_package_name@$npm_package_version"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HenryPenton/pentonopolis.git"
  },
  "keywords": [
    "telegram",
    "moviebot"
  ],
  "author": "Henry Penton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HenryPenton/pentonopolis/issues"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/mockingFunctions/mocks.ts",
      "<rootDir>/old"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/fetcher/fetcher.ts"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec|steps))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "homepage": "https://github.com/HenryPenton/pentonopolis/tree/main/projects/telegraf-moviebot#readme",
  "devDependencies": {
    "@stryker-mutator/core": "8.x",
    "@stryker-mutator/jest-runner": "8.x",
    "@stryker-mutator/typescript-checker": "8.x",
    "jest": "29.x",
    "ts-jest": "29.x",
    "typescript": "5.x"
  },
  "dependencies": {
    "axios": "1.x",
    "array": "workspace:*",
    "dotenv": "16.x",
    "telegraf": "4.x"
  }
}
