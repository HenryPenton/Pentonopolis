{
  "name": "array",
  "version": "1.0.0",
  "description": "Array utilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dependencies:check": "pnpm outdated --json > outdated.json || true",
    "lint:check": "eslint --no-fix . --ext .ts",
    "lint": "eslint . --ext .ts",
    "mutate": "stryker run -c stryker.config.json --concurrency 8",
    "prepare": "pnpm run build",
    "prettier:check": "prettier --check ./src/**/*.ts",
    "prettier": "prettier --write ./src/**/*.ts",
    "test:compile": "tsc --project tsconfig-test.json",
    "test:coverage": "jest --coverage",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/mockingFunctions/mocks.ts",
      "<rootDir>/old"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec|steps))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "restoreMocks": true,
    "clearMocks": true,
    "resetMocks": true
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HenryPenton/pentonopolis.git"
  },
  "author": "Henry Penton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HenryPenton/pentonopolis/issues"
  },
  "devDependencies": {
    "@stryker-mutator/core": "8.x",
    "@stryker-mutator/jest-runner": "^8.x",
    "@stryker-mutator/typescript-checker": "8.x",
    "@swc/core": "1.x",
    "@swc/jest": "0.2.x",
    "jest":"29.7.0",
    "typescript": "5.x"
  }
}
